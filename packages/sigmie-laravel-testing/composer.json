{
    "name": "sigmie/sigmie-laravel-testing",
    "description": "Laravel testing helpers for Elasticsearch",
    "keywords": [
        "laravel",
        "sigmie",
        "testing",
        "helpers",
        "phpunit"
    ],
    "homepage": "https://github.com/sigmie/sigmie-laravel-testing",
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Orfanos",
            "email": "nico@sigmie.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Sigmie\\Testing\\Laravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sigmie\\Testing\\Laravel\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sigmie\\Testing\\Laravel\\SigmieTestingServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
