{
    "name": "Sigmie app",
    "dockerComposeFile": [
        "../docker-compose.yml" // Has to be in root to use Tinkerwell app
    ],
    "service": "app",
    "workspaceFolder": "/var/www/app",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "initializeCommand" : "git pull origin $(git rev-parse --abbrev-ref HEAD)",
    "postAttachCommand": "git pull origin $(git rev-parse --abbrev-ref HEAD)",
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y git vim curl zsh",
    "runArgs": ["--env-file","/dev/null"],
    "overrideCommand": false,
    "extensions": [
        "bmewburn.vscode-intelephense-client",
        "marsl.vscode-php-refactoring",
        "chenxsan.vscode-standardjs",
        "bradlc.vscode-tailwindcss",
        "octref.vetur",
        "amiralizadeh9480.laravel-extra-intellisense",
        "onecentlin.laravel-blade"
    ]
}
