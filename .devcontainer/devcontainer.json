{
    "name": "Sigmie app",
    "dockerComposeFile": [
        "../docker-compose.yml" // Has to be in root to use Tinkerwell app
    ],
    "service": "app",
    "workspaceFolder": "/var/www/app",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "runArgs": ["--env-file","/dev/null"],
    //"postCreateCommand": "add-apt-repository ppa:ondrej/php --remove -y && apt-get update && apt-get install -y npm && npm install -g yarn",
    "overrideCommand": false,
    "extensions": [
        "bmewburn.vscode-intelephense-client",
        "marsl.vscode-php-refactoring",
        "chenxsan.vscode-standardjs",
        "bradlc.vscode-tailwindcss",
        "octref.vetur",
        "amiralizadeh9480.laravel-extra-intellisense",
        "onecentlin.laravel-blade"
    ]
}
