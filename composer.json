{
    "name": "sigmie/sigmie",
    "description": "Sigmie Elasticsearch utils",
    "keywords": [
        "elasticsearch",
        "sigmie"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "nicoorfi",
            "email": "nico@sigmie.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "symfony/console": "^6",
        "nesbot/carbon": "^2.48",
        "adbario/php-dot-notation": "^2.2",
        "elastic/transport": "^8.5",
        "illuminate/collections": "^9.38"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "spatie/ray": "^1.1",
        "brianium/paratest": "^6.3",
        "rachidlaasri/travel": "^1.06"
    },
    "autoload": {
        "psr-4": {
            "Sigmie\\Tests\\": "tests/",
            "Sigmie\\": "packages/"
        },
        "files": [
            "packages/Shared/helpers.php"
        ]
    },
    "autoload-dev": {},
    "replace": {
        "sigmie/base": "self.version",
        "sigmie/cli": "self.version",
        "sigmie/http": "self.version",
        "sigmie/support": "self.version",
        "sigmie/testing": "self.version"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "packages/Cli/bin/sigmie"
    ]
}
